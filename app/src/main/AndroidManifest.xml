<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spacebunny.hshen.inscat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".InsCatApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ins.auth.AuthActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".view.post_detail.PostActivity" />

        <activity android:name=".view.profile_detail.ProfileActivity" />

        <activity android:name=".view.like_list.LikeListActivity" />

        <activity android:name=".view.comment_list.CommentListActivity" />

        <activity android:name=".view.favorite_list.ChooseCategoryActivity"/>

        <activity android:name=".view.favorite_list.CategoryPostListActivity"/>

        <activity android:name="com.spacebunny.hshen.inscat.AndroidDatabaseManager"
                  android:theme="@style/Theme.AppCompat.Light"/>

    </application>

</manifest>
