<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/like_image"
        android:layout_width="@dimen/comment_photo_size"
        android:layout_height="@dimen/comment_photo_size"
        android:layout_marginRight="@dimen/spacing_medium"
        android:contentDescription="Comment author photo"
        fresco:placeholderImage="@drawable/user_photo_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>
    <TextView
        android:id="@+id/like_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/like_image"
        android:layout_alignTop="@+id/like_image"
        android:text="USER NAME"
        style="@style/AppTheme.TextView.2"/>
åå
    <TextView
        android:id="@+id/like_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/like_image"
        android:layout_below="@+id/like_full_name"
        android:text="I like the post"/>
</RelativeLayout>